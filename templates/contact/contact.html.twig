{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<div class="container-contact" >
    {% for message in app.flashes('success') %}
        <div class="alert-success">
            <p>{{ message }}</p>
        </div>
    {% endfor %}
    <div class="formulaire">
        <h3><span class="color">Contactez</span> moi.</h3>
        <p>Les champs avec <span class="color">(*)</span> sont obligatoires.</p>
        {{ form_start(form, {'attr': {'id': 'form'}}) }}
            {{ form_label(form.lastname) }}
            {{ form_widget(form.lastname, {'attr': {'class': 'form-input', 'placeholder': 'ex: Doe'}}) }}

            {{ form_label(form.firstname) }}
            {{ form_widget(form.firstname, {'attr': {'class': 'form-input', 'placeholder': 'ex: John'}}) }}

            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-input', 'placeholder': 'ex: dgdsgh@ffd.com'}}) }}

            {{ form_label(form.subject) }}
            {{ form_widget(form.subject, {'attr': {'class': 'form-input', 'placeholder': 'Objet'}}) }}

            {{ form_label(form.message) }}
            {{ form_widget(form.message, {'attr': {'class': 'form-input', 'placeholder': 'Votre message'}}) }}
            {{ form_row(form.envoyer, {'attr': {'class': 'bg-color-hov'}}) }}
        {{ form_end(form) }}
        <form id="form" action="https://formspree.io/f/mayzgrjq" method="POST">
            <label for="lastname">
                <p>Nom :<span class="color">*</span></p>
                <input class="form-input" id="lastname" type="text" name="lastname" placeholder="Nom" required>
            </label>
            <label for="name">
                <p>Prénom :<span class="color">*</span></p>
                <input class="form-input" id="name" type="text" name="name" placeholder="Prénom" required>
            </label>
            <label for="email">
                <p>E-mail :<span class="color">*</span></p>
                <input class="form-input" id="email" type="email" name="email" placeholder="E-mail" required>
            </label>
            <label for="subject">
                <p>Objet :</p>
                <input class="form-input" id="subject" type="text" name="subject" placeholder="Objet">
            </label>
            <label for="message">
                <p>Message :<span class="color">*</span></p>
                <textarea class="form-input" name="message" id="message" cols="30" rows="10" placeholder="Entrez votre message ici..." required></textarea>
            </label>
            <button class="bg-color-hov" type="submit">Envoyer</button>
        </form>
    </div>
    <div class="card-contact" >
        <div class="container-contact-info">
            <h2><span class="color">Informations</span> de contact</h2>
            <div class="contact-info-ligne">
                <img src="{{ asset('assets/images/icon-name.png')}}" class="icon" alt="name-icon">
                <div class="contact-info-text">
                    <h4><span class="color">Prénom / Nom</span></h4>
                    <p>Damien Lebon</p>
                </div>
            </div>
            <div class="contact-info-ligne">
                <img src="{{ asset('assets/images/icon-location.png')}}" class="icon" alt="location-icon">
                <div class="contact-info-text">
                    <h4><span class="color">Localisation</span></h4>
                    <p>Lyon, FR</p>
                </div>
            </div>
            <div class="contact-info-ligne">
                <img src="{{ asset('assets/images/icon-phone.png')}}" class="icon" alt="phone-icon">
                <div class="contact-info-text">
                    <h4><span class="color">Téléphone</span></h4>
                    <p>+33 6 69 47 00 35</p>
                </div>
            </div>
            <div class="contact-info-ligne">
                <img src="{{ asset('assets/images/icon-email.png')}}" class="icon" alt="email-icon">
                <div class="contact-info-text">
                    <h4><span class="color">E-mail</span></h4>
                    <p>damien.lebon.pro1@gmail.com</p>
                </div>
            </div>
            <div class="container-contact-info-ligne-social">
                <div class="contact-info-ligne-social">
                    <a id="linkedin" href="https://www.linkedin.com/in/damien-lebon-203650253/" target="_blank">
                        <img src="{{ asset('assets/images/linkedin logo.png')}}" class="social-media" alt="linkedin-logo">
                        <h4 class="contact-info-text">Linkedin</h4>
                    </a>
                </div>
                <div class="contact-info-ligne-social">
                    <a id="github" href="https://github.com/DamienL97r" target="_blank">
                        <img src="{{ asset('assets/images/iconCompetences/github.png')}}" class="social-media" alt="github-logo">
                        <h4 class="contact-info-text">GitHub</h4>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
