    </div>

    <!--Mes services-->
    <div class="header-page">
        <h1>Mes <span class="color">Hard Skills</span></h1>
    </div> 
    <div class="containerCard-service">
        {% for category in categories %}
        <div class="card-service bg-color-hov">
            <div class="service-img">
                <img class="bg-color icon-service" src="{{ vich_uploader_asset(category, 'categorieFile') }}" alt="service-one">
                <h2>{{ category.title }}</h2>
                <img class="icon-arrow" src="{{ asset('assets/images/icon-arrow.png')}}" alt="arrow">
            </div>
            <div class="service-description">
                {% for hardskill in category.hardskills %}
                    <div class="service-description-content">
                        <img src="{{ vich_uploader_asset(hardskill, 'hardSkillsFile') }}" alt="">
                        <p>{{ hardskill.title }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
    
    <!--Compétences-->
    <div class="header-page">
        <h1>Mes <span class="color">Soft Skills</span></h1>
    </div> 
    <div class="container-competences">
        {% for softSkill in softSkills %}
            <h2 class="bg-color-hov">{{ softSkill.name }}</h2>
        {% endfor %}
    </div>
