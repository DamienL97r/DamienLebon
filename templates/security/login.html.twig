{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="signin"> 
    <div class="content"> 
        <h2 class="color">Connexion</h2>
        <form class="form" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="inputBox"> 
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus> <i>Email</i> 
            </div>
            <div class="inputBox"> 
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required> <i>Mot de passe</i> 
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="bg-color-hov btn-login">Connexion</button> 
        </form>
    </div> 
</div> 
    
{% endblock %}
